{% extends 'base.html.twig' %}

{% block title %}WChat Register{% endblock %}
{% block body %}
    <div class="container">
        <div class="title">WChat Register</div>
        {% if error is defined %}
            <p class="error">{{ error }}</p>
        {% endif %}
        <div class="form">
            {{ form_start(form) }}

            {{ form_row(form.email) }}
            {{ form_row(form.first_name )}}
            {{ form_row(form.last_name) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.password) }}
            {{ form_row(form.register) }}

            {{ form_end(form) }}
        </div>
        <a class="route-login" href="{{path("app_login")}}">Login account</a>
    </div>
{% endblock %}
